<div class="center jumbotron">
<% provide(:title, "Contacts") %>



    <section class="background-gray-lightest">
      <div class="container">
        <div class="breadcrumbs">
          <ul class="breadcrumb">
            <li><a href="<%= home_path %>">Home</a></li>
           
          </ul>
        </div>
        <h1 class="heading"></h1>
        <p class="lead">We will like to hear from you.  </p>
      </div>
    </section>
    <section>  
      <div id="contact" class="container">
        <div class="row">
          <div class="col-lg-4">
            <div class="box-simple">
              <div class="icon"><i class="pe-7s-map-2"></i></div>
              <h4 class="heading margin-bottom">Address</h4>
              <p><br>Kyiv<br>Ukraine </p>
            </div>
            <div class="box-simple">
              <div class="icon"><i class="pe-7s-phone"></i></div>
              <h4 class="heading margin-bottom">Call center</h4>
              <p class="text-muted"></p>
              <p><strong>+38 066 289 91 33</strong></p>
            </div>
            <div class="box-simple">
              <div class="icon"><i class="pe-7s-mail-open"></i></div>
              <h4 class="heading margin-bottom">Send your quotes on email</p>
              <ul>
                <li><a href="mailto:">ritz.rkraft@gmail.com</a></li>
              
              </ul>
            </div>
          </div>
          <div class="col-lg-7 col-lg-offset-1">
            <div class="icon"><i class="pe-7s-pen"></i></div>
            <h4 class="heading margin-bottom">Contact form</h4>
            <p class="text-muted">Place your inquiry here</p>
            <div class="form-holder">
              <%= form_for(@inquiry, path: '/inquiries', method: :post) do |f| %>
                <div class="row">
                <div class="col-sm-6">
                 
                    <label for="firstname">First name</label>
                    <%= f.text_field :first_name, placeholder: "First name" %>
                  </div>
                </div>
                <div class="col-sm-6">
                  
                    <label for="secondname">Last name</label>
                    <%= f.text_field :second_name, placeholder: "Last name" %>
                  
                </div>
                <div class="col-sm-6">
                 
                    <label for="email">Email</label>
                    <%= f.email_field :email, placeholder: "Type your email address" %>
                    
                  
                </div>
                <div class="col-sm-6">
                  
                    <label for="subject">Subject</label>
                    <%= f.text_field :subject, placeholder: "Subject" %>
                  
                </div>
                <div class="col-sm-12">
                  
                    <label for="message">Message</label>
                    <%= f.text_field :message, placeholder: "Write inquiring details here" %>
                 
                </div>
                <div class="col-sm-12">
                   <div class="form-group">
                  <%= f.button 'Submit', class: 'submit', type: 'submit' %>
                  <% end %>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <div id="map">
    
    <img src="https://maps.googleapis.com/maps/api/staticmap?center=Ромашки,+Київська+обл.,+09623/@49.848152,30.308178,10.5z/data=!4m13!1m7!3m6!1s0x40d3777a169dab73:0x163de9c524752f3d!2z0KDQvtC80LDRiNC60LgsINCa0LjRl9Cy0YHRjNC60LAg0L7QsdC7LiwgMDk2MjM!3b1!8m2!3d49.7318727!4d30.5992011!3m4!1s0x40d3777a169dab73:0x163de9c524752f3d!8m2!3d49.7318727!4d30.5992011&size=400x400&zoom=17&key=AIzaSyCImVA9mhtyEYa5kABn2kVi4f9gQPtNG1k"></img>

</div>

    <footer class="footer">
      <div class="footer__block">
        <div class="container">
          <div class="row">
            <div class="col-md-8 col-sm-12">
              <h4 class="heading">About Us </h4>
              <p>We develop and produce plastic packaging of any shape and complexity, for a wide range of goods, containers, lunch boxes, sushi boxes.  Our production is characterized by an individual approach, we can select the optimal form of packaging material, attractive and optimized design, with your company logo.  </p>
            </div>
            

              
            </div>
          </div>
        </div>
      </div>
    </footer>
