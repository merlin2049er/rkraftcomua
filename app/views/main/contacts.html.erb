              <h4 class="heading margin-bottom"><%= t('.enqmail') %></p>
              <ul>
                <li><a href="mailto:">ritz.rkraft@gmail.com</a></li>
              
              </ul>
            </div>
          </div>
          <div class="col-lg-7 col-lg-offset-1">
           
      <!-- The form -->

            <h4 class="form-header"><%= t('.inqform') %></h4>
            <p class="form-sub-header"><%= t('.place') %></p>
            <div class="forms">
              <%= form_for(@inquiry, path: '/inquiries', method: :post) do |f| %>
              <div class="row">

                <div class="col-sm-6">
                   <label for="firstname"><%= t('.first_name') %></label>
                    <%= f.text_field :first_name, placeholder: t('.first_name') %>
                </div>
              </div>

                <div class="col-sm-6">
                   <label for="secondname"><%= t('.last_name') %></label>
                    <%= f.text_field :second_name, placeholder: t('.last_name') %>
                </div>
               
                 <div class="col-sm-6">
                    <label for="email"><%= t('.email') %></label>
                    <%= f.text_field :email, placeholder: t('.mailin') %>
                 </div>

                 <div class="col-sm-6">
                    <label for="subject"><%= t('.subject') %></label>
                    <%= f.text_field :subject, placeholder: t('.subject') %>
                 </div>

                 <div class="col-sm-12">
                    <label for="message"><%= t('.message') %></label>
                    <%= f.text_field :message, placeholder: t('.details') %>
                 </div>

                 <div class="col-sm-12">
                    <label for="image">Place your images here</label>
                    <%= f.file_field :image, placeholder: 'Place your products, sizing images here' %>
                    <%= f.hidden_field :image_cache %>
                 </div>

                 <div class="col-sm-12">
                 
                  <%= f.button t('.submit'), class: 'submit', type: 'submit' %>
                  <% end %>
                
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

