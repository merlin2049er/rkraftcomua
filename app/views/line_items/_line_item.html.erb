<% if @line_item == @current_item %> 
<tr id="current item">
<% else %>
<tr>
<% end %>
<% if I18n.locale == :en %>
<td><%= line_item.quantity %> &times;</td>
<td><%= line_item.product.title %></td>
<% else %>
<td><%= line_item.quantity %> &times;</td>
<td><%= line_item.product.title_ru %></td>
<% end %>
<td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
<td><%= link_to ' Remove', decrement_line_item_url(id: line_item.product_id) %></td>

</tr>

